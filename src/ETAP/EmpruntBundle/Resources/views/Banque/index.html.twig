

{% block body -%}
    <h1>Banque list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Fax</th>
                <th>Mail</th>
                <th>Nomresponsable</th>
                <th>Telephone</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('banque_show', { 'id': entity.id }) }}">{{ entity.fax }}</a></td>
                <td>{{ entity.mail }}</td>
                <td>{{ entity.nomresponsable }}</td>
                <td>{{ entity.telephone }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('banque_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('banque_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('banque_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
