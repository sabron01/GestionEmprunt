{% extends "EmpruntBundle::layout.html.twig" %}
{% block title %} {{ parent() }} | Accueil {% endblock %}
{% block centercontent %}
<div class="pageheader notab">
    <h1 class="pagetitle">Gestion des offres</h1>
    <span class="pagedesc"></span>
</div><!--pageheader-->
<div id="contentwrapper" class="contentwrapper">
    {% if (class_alert !="") %}
    <div class="notibar {{ class_alert }}">
        <a class="close"></a>
        <p>{{ notify }}</p>
    </div>
    {% endif %}
    <div class="contenttitle2">
        <h3>Sélectionner une offre</h3>
    </div><!--contenttitle-->
    <form id="offre_form" class="stdform stdform2" method="post" action="#">
    <p>
        <label>Code offre</label>
        <span class="field">            
            <select onchange="" name="selection" id="offre_id">
                <option value="">Sélectionner une offre</option>
                                {% for entity in entities %}
                <option value="{{ entity.id }}">{{ entity.codeoffre }}</option>
                                {% endfor %}
            </select>              
        </span>
    </p>
    <div id="form_offre"></div>
    </form>
    <div id="action_block">
        <p class="stdformbutton">
            <button class="stdbtn btn_yellow" id="update_form">Modifier</button>            
            <button class="stdbtn btn_blue" id="save_edit">Enregistrer</button>
            <button class="stdbtn" style="float: right;">Retour</button>
        </p>  
    </div>      
</div><!--contentwrapper-->
{% endblock %}
{% block javascripts %}

<script type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/jquery-1.7.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/jquery-ui-1.8.16.custom.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/jquery.cookie.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/emprunt/js/custom/general.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/emprunt/js/custom/offre.js') }}"></script>

<!--[if lte IE 8]><script language="javascript" type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/excanvas.min.js') }}"></script><![endif]-->
<!--[if lt IE 9]>
        <script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
<![endif]-->

{% endblock %} 
