{% extends "EmpruntBundle::layout.html.twig" %}
{% block title %} {{ parent() }} | Ajouter Demande {% endblock %}
{% block centercontent %}
<div class="pageheader notab">
    <h1 class="pagetitle">Gestion des Besoins</h1>
    <span class="pagedesc"></span>
</div><!--pageheader-->
<div id="contentwrapper" class="contentwrapper elements">
{{ form_errors(form) }} 
    {% if (class_alert !="") %}
    <div class="notibar {{ class_alert }}">
                        <a class="close"></a>
                        <p>{{ notify }}</p>
    </div>
    {% endif %}
    
    <div class="contenttitle2">
        <h3>Ajouter un Besoin</h3>
    </div><!--contenttitle-->

    <form class="stdform stdform2" method="post" action="{{ path('AjouterBesoin') }}" {{ form_enctype(form) }}>
        
        
        
        <p>
            <label>Libelle Besoin</label>
            <span class="field">
                {{ form_widget(form._token) }}                
                {{ form_widget(form.libelle) }}
            </span>
        </p>

        <p>
            <label>Valeur Besoin</label>
            <span class="field">{{ form_widget(form.valeur) }}</span>
            {{ form_widget(form.valeur) }}
        </p>        
        
        
        <p>
             <label>Date Besoin </label> 
             <span class="field">
                 {{ form_widget(form.datebesoin) }}
{#                 <input type="text" id="etap_empruntbundle_besointype_datebesoin" name="etap_empruntbundle_besointype[datebesoin]" required="required" class="width100 hasDatepicker" />                 #}
             </span>
             {{ form_errors(form.datebesoin) }}
        </p>
        
        

        <p>
            <label>Description Besoin</label>
            <span class="field">{{ form_widget(form.description) }}</span>
        </p>

        
      
        <p class="stdformbutton">
            <button class="submit radius2">Ajouter</button>            
            <button class="stdbtn">Retour</button>
        </p>
    </form>

</div><!--contentwrapper-->
{% endblock %}
{% block javascripts %}

    <script type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/jquery-1.7.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/jquery-ui-1.8.16.custom.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/jquery.cookie.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/colorpicker.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/jquery.jgrowl.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/jquery.alerts.js') }}"></script>    
    
    <script type="text/javascript" src="{{ asset('bundles/emprunt/js/custom/general.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/emprunt/js/custom/elements.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/emprunt/js/custom/besoin.js') }}"></script>
