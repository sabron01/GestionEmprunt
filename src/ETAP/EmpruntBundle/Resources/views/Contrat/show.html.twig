{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Contrat</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Datesignature</th>
                <td>{{ entity.datesignature|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Dureeremboursement</th>
                <td>{{ entity.dureeremboursement }}</td>
            </tr>
            <tr>
                <th>Intervalleremboursement</th>
                <td>{{ entity.intervalleremboursement }}</td>
            </tr>
            <tr>
                <th>Marge</th>
                <td>{{ entity.marge }}</td>
            </tr>
            <tr>
                <th>Monnaieconvention</th>
                <td>{{ entity.monnaieconvention }}</td>
            </tr>
            <tr>
                <th>Monnaiepayement</th>
                <td>{{ entity.monnaiepayement }}</td>
            </tr>
            <tr>
                <th>Montantemprunt</th>
                <td>{{ entity.montantemprunt }}</td>
            </tr>
            <tr>
                <th>Nbrtirage</th>
                <td>{{ entity.nbrtirage }}</td>
            </tr>
            <tr>
                <th>Refcontrat</th>
                <td>{{ entity.refcontrat }}</td>
            </tr>
            <tr>
                <th>Tauxdirecteur</th>
                <td>{{ entity.tauxdirecteur }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('contrat') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('contrat_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('contrat_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
