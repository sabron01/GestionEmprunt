    <h1 class="pagetitle">Convention de cr√©dit</h1>
    <span class="pagedesc"></span>
</div><!--pageheader-->
<div id="contentwrapper" class="contentwrapper">        

    <div id="vertical" class="subcontent">
        <!-- START OF VERTICAL WIZARD -->
        <form class="stdform" id="form_convention" method="post" action="{{ path('AjouterCommissionsContrat',{'id': entity_contrat.id}) }}" novalidate=true>

            <div id="wizard3" class="wizard verwizard">

                <ul class="verticalmenu anchor">
                    <li>
                        <a href="{{ path('AjouterContrat') }}" class="disabled" isdone="1" rel="1">
