{% extends "EmpruntBundle::layout.html.twig" %}
{% block title %} {{ parent() }} | Accueil {% endblock %}
{% block centercontent %}
<div class="pageheader notab">
    <h1 class="pagetitle">Gestion des demandes</h1>
    <span class="pagedesc"></span>
</div><!--pageheader-->
<div id="contentwrapper" class="contentwrapper">
    <div class="notibar msgsuccess" style="display: none">
            <a class="close"></a>
            <p>Le Tableau de Remboursement a été généré avec succès</p>
    </div>
    <div class="contenttitle2">
        <h3>Sélectionner un contrat</h3>
    </div><!--contenttitle-->
    <form class="stdform stdform2" method="post" action="#">
        <p>
            <label>Réference Contrat</label>
            <span class="field">            
                <select onchange="" name="selection" id="contrat_id">
                    <option value="0">Sélectionner un contrat</option>
                    {% for entity in entities_contrats %}
                    <option value="{{ entity.id }}">{{ entity.refcontrat }}</option>
                    {% endfor %}
                </select>              
            </span>
        </p>   
        <div id="form_request"></div>
    </form>
    <div id="list_tirage" ></div>
    <div id="table_rembourssement"></div>    
    <div id="action_block">
        <p class="stdformbutton">
            <button class="stdbtn btn_yellow" id="generate_table">Générer</button>                        
            <button class="stdbtn" style="float: right;">Retour</button>
        </p>  
    </div>      
</div><!--contentwrapper-->
{% endblock %}
{% block javascripts %}

<script type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/jquery-1.7.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/jquery-ui-1.8.16.custom.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/jquery.cookie.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/emprunt/js/custom/general.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/emprunt/js/plugins/jquery.alerts.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/emprunt/js/custom/remboursement.js') }}"></script>

