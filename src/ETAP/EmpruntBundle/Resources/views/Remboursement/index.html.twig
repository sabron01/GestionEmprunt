{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Remboursement list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Dateecheance</th>
                <th>Interet</th>
                <th>Montantprincipal</th>
                <th>Montantrestantdu</th>
                <th>Montanttotal</th>
                <th>Montanttotalremb</th>
                <th>Nbrjours</th>
                <th>Numremboursement</th>
                <th>Tauxdirecteur</th>
                <th>Tauxinteret</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('remboursement_show', { 'id': entity.id }) }}">{{ entity.dateecheance }}</a></td>
                <td>{{ entity.interet }}</td>
                <td>{{ entity.montantprincipal }}</td>
                <td>{{ entity.montantrestantdu }}</td>
                <td>{{ entity.montanttotal }}</td>
                <td>{{ entity.montanttotalremb }}</td>
                <td>{{ entity.nbrjours }}</td>
                <td>{{ entity.numremboursement }}</td>
                <td>{{ entity.tauxdirecteur }}</td>
                <td>{{ entity.tauxinteret }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('remboursement_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('remboursement_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('remboursement_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
