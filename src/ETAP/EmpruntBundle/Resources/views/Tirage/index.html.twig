{#{% extends '::base.html.twig' %}#}

{% block body -%}
    <h1>Tirage list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Datevaleur</th>
                <th>Montant</th>
                <th>Reftirage</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tirage_show', { 'id': entity.id }) }}">{{ entity.datevaleur }}</a></td>
                <td>{{ entity.montant }}</td>
                <td>{{ entity.reftirage }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tirage_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tirage_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tirage_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
